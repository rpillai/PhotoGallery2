@using System.Web.Security.AntiXss
@model List<PhotoGallery2.Models.Comment>
<h4>Comments....</h4>
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-2">
            <p class="small label label-info"> <small>@item.User.FirstName</small></p>
        </div>
        <div class="col-sm-9">
            <p class="small">@Html.Encode(item.Description)</p>
        </div>
    </div>
}

