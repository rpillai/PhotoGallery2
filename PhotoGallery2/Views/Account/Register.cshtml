@model PhotoGallery2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="row col-xs-12 col-md-offset-2 col-md-8">
    <div class="panel panel-primary panel-collapse">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
            @*<h4>Create a new account</h4>*@
        </div>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-xs-3 control-label hidden-xs" })
                    <div class="col-xs-9">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autofocus=true, placeholder="Email" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-xs-3 control-label hidden-xs" })
                    <div class="col-xs-9">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder="Password" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-xs-3 control-label hidden-xs" })
                    <div class="col-xs-9">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder="Confirm Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-offset-3 col-xs-9">
                        <input type="submit" class="btn btn-primary" value="Register" />
                    </div>
                </div>
                <div class="col-xs-12">
                    @Html.ValidationSummary()
                </div>
            </div>
            
            
        }
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
