@using System.Runtime.InteropServices
@model PhotoGallery2.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}
<div class="col-md-offset-1 col-md-10">
    <div class="panel panel-collapse panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-7">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "UserName", autofocus = true, required = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        </div>
                        <div class="col-md-6">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = true })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-5">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox-inline" })
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-md-6">
                            <input type="submit" value="Log in" class="btn btn-primary" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Register", "Register",null,htmlAttributes: new { @class="btn btn-link" } ) if you don't have a local account.
                    </p>
                }
            </div>
            <div class="col-md-5">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>
        </div>
        
            <p class="text-warning">
                @Html.ValidationSummary(true)
            </p>
        
    </div>
</div>
    
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}