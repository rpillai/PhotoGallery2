@model IEnumerable<PhotoGallery2.Models.PhotoViewModel>
@{
    ViewBag.Title = "Photos";
}
@Styles.Render("~/Content/bootstrap-image-gallery")
<input type="hidden" id="albumID" value="@Request.QueryString["AlbumID"]" />
<div class="row">
    <div class="body-content pull-left">
        <p>
            @Html.ActionLink("Back to Gallery", "Index", "Album")
        </p>
    </div>

    <div class="col-lg-offset-1 pull-right">
        <button id="launch" class="btn btn-primary pull-left">
            <i class="glyphicon glyphicon-camera"></i>
            Start Slide Show
        </button>
    </div>
</div>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="media">
                <div class="media-heading">
                    <h4>@item.Title</h4>
                </div>
                <div id="links" class="media-object pull-left">
                    <a href="~/Photo/Details?PhotoID=@item.PhotoID">
                        <img src="@Url.Content(item.ThumbnailPath)" class="media-object img-rounded img-responsive" alt="album-thumbnail" />
                    </a>
                </div>
                <br />
                <div class="media-body">
                    <p class="text-info pull-left">@item.Description</p>
                </div>
            </div>
        </div>
    }
</div>
<br />

<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
    <div class="slides img-rounded"></div>
    <h3 class="title"></h3>
    <a class="prev">‹</a>
    <a class="next">›</a>
    @*<a class="close">×</a>*@
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
    <div class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body img-rounded"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary pull-left prev">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        Previous
                    </button>
                    <button type="button" class="btn btn-primary next">
                        Next
                        <i class="glyphicon glyphicon-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/bundles/boostrap-image-gallery")
    @Scripts.Render("~/bundles/jquery.blueimp-gallery")
    @Scripts.Render("~/bundles/bootstrap-image-gallery")

    <script type="text/javascript">
        $(document).ready(function () {
            document.getElementById('launch').onclick = function (event) {
                event.preventDefault();
                var albumID = document.getElementById("albumID").value;
                $.ajax({
                    url: '@Url.Action("GetPhotosForSlideShow","Photo", new { albumID = Request.QueryString["AlbumID"]})',
                    datatype: 'json'
                }).done(function (result) {
                    var obj = $.parseJSON(result);
                    var options = {
                        indicatorContainer: 'ol',
                        activeIndicatorContainer: 'active',
                        thumbnailIndicators: true
                    };
                    blueimp.Gallery(obj, options);
                });
            };
        });

    </script>
}