@model PhotoGallery2.Models.Photo
@{
    ViewBag.Title = "Upload Photos";
}
<div class="col-md-offset-2 col-md-6">
    <div class="panel panel-collapse panel-primary ">
        <div class="panel panel-heading">
            <h4 class="panel-title">@ViewBag.Title</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Upload", "Photo", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.AlbumID, new { @class = "control-label" })
                    </div>
                    <div class="col-md-6">
                        @Html.DropDownList("Albums",null, new { @class="form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Description, new {@class="form-control"})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3" style="padding-left: 15px;">
                        <input type="file" name="files" id="files" multiple="multiple" value="select file"  />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3" style="padding-left: 15px;">
                        <button type="submit" value="upload" class="btn btn-primary">
                            <span class="glyphicon glyphicon-upload"></span> Upload
                        </button>
                    </div>
                </div>
            }
            <div class="panel-footer">
                @Html.ActionLink("Back to List", "Manage", "Album")
            </div>
        </div>
    </div>
</div>