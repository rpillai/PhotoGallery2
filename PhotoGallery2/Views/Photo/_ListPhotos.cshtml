@model IEnumerable<PhotoGallery2.Models.Photo>
    <table class="table table-responsive table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.CheckBox("chkAll")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhotoID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AlbumID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.CheckBox("chkDeleteID", htmlAttributes: new { value = item.PhotoID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhotoID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td class="col-md-3">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AlbumID)
                    </td>
                    <td>
                        @Html.ActionLink(" Edit", "Edit", new { photoID = item.PhotoID }, new { @class = "glyphicon glyphicon-edit btn btn-warning" })
                        @Html.ActionLink(" Details", "Details", new { photoID = item.PhotoID }, new { @class = "glyphicon glyphicon-ok btn btn-info" })
                        @*@Html.ActionLink(" Delete", "Delete", new { photoID = item.PhotoID }, new { @class = "glyphicon glyphicon-trash btn btn-danger" })*@
                        @Html.ActionLink(" Comments", "Index", "Comment", new { photoID = item.PhotoID }, new { @class = "glyphicon glyphicon-comment btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>


